# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Connection
# Get this from MongoDB Atlas: https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-resume-builder

# JWT Secret - Generate using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ImageKit Configuration
# Sign up at: https://imagekit.io/
IMAGEKIT_PUBLIC_KEY=public_xxxxxxxxxxxxxxxxxxxxxxxx
IMAGEKIT_PRIVATE_KEY=private_xxxxxxxxxxxxxxxxxxxxxxxx
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# Email Configuration (for Nodemailer)
# For Gmail: Enable 2FA and generate App Password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-16-character-app-password
EMAIL_FROM=AI Resume Builder <your-email@gmail.com>

# Frontend URL (Your domain)
FRONTEND_URL=https://yourdomain.com

# CORS Origin (Same as frontend URL)
CORS_ORIGIN=https://yourdomain.com
